{
  "name": "fpc",
  "description": "Functional patterns collection",
  "version": "3.0.0",
  "author": "Emiliano Bovetti <emiliano.bovetti@gmail.com>",
  "license": "GPL-3.0",
  "keywords": [
    "functional",
    "collection",
    "result",
    "fpc",
    "fp"
  ],
  "main": "./src/index",
  "es:main": "./dist/fpc.es6.js",
  "umd:main": "./dist/fpc.umd.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emilianobovetti/fpc.git"
  },
  "bugs": {
    "url": "https://github.com/emilianobovetti/fpc/issues"
  },
  "scripts": {
    "lint": "eslint .",
    "build": "rollup -c",
    "playground": "yarn build && node playground.js"
  },
  "release": {
    "branch": "master",
    "prepare": [
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "dist/*.js",
          "src"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "@fpc/maybe": "^1.1.1",
    "@fpc/result": "^1.1.1",
    "@fpc/stream": "^1.3.1",
    "@fpc/types": "^1.0.1",
    "@fpc/utils": "^1.4.1"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^9.0.0",
    "eslint": "^7.1.0",
    "rollup": "^2.26.8",
    "rollup-plugin-terser": "^7.0.1"
  }
}
